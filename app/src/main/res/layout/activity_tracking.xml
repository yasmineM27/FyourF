<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Titre -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Tracking GPS Automatique"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Configuration -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configuration"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <EditText
                android:id="@+id/pseudoInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pseudo (optionnel)"
                android:inputType="text"
                android:padding="12dp" />

            <EditText
                android:id="@+id/numeroInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NumÃ©ro de tÃ©lÃ©phone *"
                android:inputType="phone"
                android:padding="12dp" />

            <EditText
                android:id="@+id/intervalInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Intervalle (secondes)"
                android:inputType="number"
                android:text="30"
                android:padding="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â„¹ï¸ Intervalle minimum: 10 secondes"
                android:textSize="12sp"
                android:textColor="#666666"
                android:paddingTop="4dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ContrÃ´les -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/startTrackingBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â–¶ï¸ DÃ©marrer"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/stopTrackingBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â¹ï¸ ArrÃªter"
            android:backgroundTint="#F44336"
            android:enabled="false"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/statsBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“Š Stats"
            android:backgroundTint="#FF9800" />

    </LinearLayout>

    <!-- Statut -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”´ Tracking inactif"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/positionCountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Positions: 0"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/durationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DurÃ©e: 00:00:00"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/distanceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance: 0.00 km"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/speedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vitesse moy: 0.00 km/h"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingTop="4dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bouton voir trajet complet -->
    <Button
        android:id="@+id/viewTrajectoryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ—ºï¸ Voir trajet complet"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="16dp" />

    <!-- Carte -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <fragment
            android:id="@+id/trackingMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

