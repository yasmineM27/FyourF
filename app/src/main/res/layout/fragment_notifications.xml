<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/gray_light">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”” Notifications"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue" />
    </LinearLayout>

    <!-- Action Buttons Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <Button
                android:id="@+id/clearNotificationsBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Clear All"
                android:textSize="14sp"
                android:backgroundTint="@color/primary_blue_light"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/markAsReadBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Mark as Read"
                android:textSize="14sp"
                android:backgroundTint="@color/accent_green"
                android:textColor="@color/primary_blue_dark" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Notifications List Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/notificationsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:divider="@color/gray_light"
                android:dividerHeight="1dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/emptyNotificationsText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ“­ No notifications yet"
                android:textSize="16sp"
                android:textColor="@color/gray_medium"
                android:gravity="center"
                android:visibility="gone" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
