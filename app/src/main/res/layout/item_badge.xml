<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/badge_card_background">

    <!-- Emoji du badge -->
    <TextView
        android:id="@+id/badgeImageView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ðŸ†"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Nom du badge -->
    <TextView
        android:id="@+id/badgeNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Badge Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:gravity="center"
        android:layout_marginBottom="4dp" />

    <!-- Description du badge -->
    <TextView
        android:id="@+id/badgeDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Badge description"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Barre de progression -->
    <ProgressBar
        android:id="@+id/badgeProgressBar"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="50"
        android:layout_marginBottom="4dp" />

    <!-- Pourcentage de progression -->
    <TextView
        android:id="@+id/badgeProgressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="50%"
        android:textSize="11sp"
        android:textColor="@color/gray"
        android:gravity="center" />

</LinearLayout>

