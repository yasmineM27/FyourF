<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to FindMyFriend"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1a1a1a"
        android:layout_marginBottom="24dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        xmlns:card="http://schemas.android.com/apk/res-auto"
        card:cardCornerRadius="8dp"
        card:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About This App"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:layout_marginBottom="12dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FindMyFriend is a location sharing app that allows you to request and share your GPS location with friends via SMS. Simply enter a friend's phone number and send a location request. They will receive an SMS and their location will be automatically sent back to you."
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingMultiplier="1.5" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        xmlns:card="http://schemas.android.com/apk/res-auto"
        card:cardCornerRadius="8dp"
        card:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How It Works"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:layout_marginBottom="12dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Go to Dashboard\n2. Enter your friend's phone number\n3. Click 'Send Location Request'\n4. Your friend will receive an SMS\n5. Their location will be sent back automatically\n6. You'll receive a notification with their location\n7. Click the notification to view on map"
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingMultiplier="1.5" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card="http://schemas.android.com/apk/res-auto"
        card:cardCornerRadius="8dp"
        card:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Features"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:layout_marginBottom="12dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✓ Real-time GPS location sharing\n✓ SMS-based communication\n✓ Integrated Google Maps\n✓ Location history tracking\n✓ Push notifications\n✓ Offline location storage"
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingMultiplier="1.5" />
        </LinearLayout>
    </CardView>

</LinearLayout>
